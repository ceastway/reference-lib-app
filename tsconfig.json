{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@components/*": [
        "../../component-lib/build/*"
      ],
      "@br-components/*": [
        "../../br-react/build/*"
      ]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "./build",
    "resolveJsonModule": true,
    "sourceMap": true,
    "jsx": "preserve",
    "incremental": true,
    "target": "es2022"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.cjs",
    "**/*.js",
    ".eslintrc.cjs"
  ],
  "exclude": [
    "./build",
    "node_modules"
  ]
}
